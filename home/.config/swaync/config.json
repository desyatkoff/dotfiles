{
    "$schema": "/etc/xdg/swaync/configSchema.json",
    "ignore-gtk-theme": true,
    "positionX": "center",
    "positionY": "top",
    "layer": "overlay",
    "control-center-layer": "top",
    "layer-shell": true,
    "layer-shell-cover-screen": true,
    "cssPriority": "user",
    "control-center-margin-top": 0,
    "control-center-margin-bottom": 0,
    "control-center-margin-right": 1370,
    "control-center-margin-left": 0,
    "notification-2fa-action": true,
    "notification-inline-replies": false,
    "notification-body-image-height": 128,
    "notification-body-image-width": 256,
    "timeout": 4,
    "timeout-low": 2,
    "timeout-critical": 0,
    "fit-to-screen": true,
    "relative-timestamps": true,
    "control-center-width": 550,
    "control-center-height": 1024,
    "notification-window-width": 440,
    "keyboard-shortcuts": true,
    "notification-grouping": true,
    "image-visibility": "when-available",
    "transition-time": 250,
    "hide-on-clear": false,
    "hide-on-action": true,
    "text-empty": "Notification center is empty...",
    "script-fail-notify": true,
    "widgets": [
        "title",
        "buttons-grid",
        "volume",
        "backlight",
        "mpris",
        "label",
        "dnd",
        "notifications"
    ],
    "widget-config": {
        "title": {
            "text": "Dashboard",
            "clear-all-button": false,
            "button-text": "Clear"
        },
        "buttons-grid": {
            "buttons-per-row": 6,
            "actions": [
                {
                    "label": "󰕾",
                    "type": "normal",
                    "command": "swaync-client -cp && sleep 0.5 && sh ~/Scripts/volume.sh --toggle-output-mute"
                },
                {
                    "label": "",
                    "type": "normal",
                    "command": "swaync-client -cp && sleep 0.5 && sh ~/Scripts/volume.sh --toggle-input-mute"
                },
                {
                    "label": "󰹑",
                    "type": "normal",
                    "command": "swaync-client -cp && sleep 0.5 && sh ~/Scripts/screenshot.sh"
                },
                {
                    "label": "󰑋",
                    "type": "normal",
                    "command": "sh ~/Scripts/record_screen.sh toggle screen DVI-D-1 ~/Videos/Screencasts/"
                },
                {
                    "label": "",
                    "type": "normal",
                    "command": "swaync-client -cp && sleep 0.5 && sh ~/Scripts/pick_color.sh"
                },
                {
                    "label": "󰊗",
                    "type": "normal",
                    "command": "sh ~/Scripts/gamemode.sh"
                },
                {
                    "label": "󰌾",
                    "type": "normal",
                    "command": "hyprlock"
                },
                {
                    "label": "",
                    "type": "normal",
                    "command": "systemctl hibernate"
                },
                {
                    "label": "󰍃",
                    "type": "normal",
                    "command": "hyprctl dispatch exit"
                },
                {
                    "label": "",
                    "type": "normal",
                    "command": "systemctl suspend"
                },
                {
                    "label": "",
                    "type": "normal",
                    "command": "sh ~/Scripts/reboot.sh"
                },
                {
                    "label": "",
                    "type": "normal",
                    "command": "sh ~/Scripts/shutdown.sh"
                }
            ]
        },
        "volume": {
            "label": "󰕾"
        },
        "backlight": {
            "label": ""
        },
        "mpris": {
            "show-album-art": "always",
            "loop-carousel": true
        },
        "label": {
            "max-lines": 4,
            "text": "Notifications"
        },
        "dnd": {
            "text": "Do Not Disturb"
        }
    }
}
